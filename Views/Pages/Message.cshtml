<div class="content-layout">
    <h1 id="page-title" class="content__title">@ViewData["MessageType"] Page</h1>
    <div class="content__body">
        <p id="page-description">
            <span>This page retrieves a@(ViewData["MessageType"]?.ToString()?.ToLower() == "admin" ? 'n' : null) <strong>@(ViewData["MessageType"]?.ToString()?.ToLower()) message</strong>.
            </span>
            <br />
            <br />
            <span>@Html.Raw(ViewData["Description"])</span>
        </p>
        <vc:code-snippet title="@(ViewData["MessageType"]) Message" code=@ViewData["Response"]>
        </vc:code-snippet>
    </div>
</div>
